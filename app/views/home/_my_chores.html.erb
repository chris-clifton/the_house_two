<div class="py-4">
  <div class="max-w-7xl flex">
    <span class="rounded-lg inline-flex p-3 bg-green-50 text-green-700">
      <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
      </svg>
    </span>
    <h1 class="text-3xl font-black text-gray-700 pt-2 ml-2">My Chores</h1>
  </div>
</div>

<% if @assigned_chores.present? %>
  <div class="flex flex-col mb-4">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Chore</th>
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              </tr>
            </thead>
          <tbody>
            <% assigned_chores.each do |assigned_chore| %>
              <!-- TODO: update with striping -->
              <!-- Even row -->
              <!-- <tr class="bg-gray-50"> -->
              <tr class="bg-white">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= link_to assigned_chore.chore.name, assigned_chore_path(assigned_chore) %></td>
                <td class="text-center px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= assigned_chore.status.humanize %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="flex flex-col mb-4">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg bg-white p-6 flex justify-between">
          <div class="pt-2">
            You don't have any open Chores right now.<br/>See something that needs to be done? Try requesting a new Chore!
          </div>
          <button class="btn btn-blue">Request a Chore</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
